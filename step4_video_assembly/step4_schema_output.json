{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Step4 Video Assembly Output Schema",
  "description": "Step4 영상 조립 결과 스키마",
  "type": "object",
  "required": ["step", "title", "video_filename", "duration_seconds"],
  "properties": {
    "step": {
      "type": "string",
      "const": "step4_video_result"
    },
    "title": {
      "type": "string",
      "description": "영상 제목"
    },
    "video_filename": {
      "type": "string",
      "description": "생성된 영상 파일명"
    },
    "duration_seconds": {
      "type": "number",
      "description": "총 영상 길이(초)"
    }
  }
}
