{
  "version": "1.0",
  "description": "모델별 System Prompt 및 설정",

  "step1_script_generation": {
    "primary_model": "claude-sonnet-4-20250514",
    "fallback_model": "claude-sonnet-4-20250514",
    "models": {
      "sonnet": {
        "model_id": "claude-sonnet-4-20250514",
        "provider": "anthropic",
        "max_tokens": 16000,
        "temperature": 0.8,
        "description": "기본 대본 생성 모델",
        "system_prompt_file": "step1_script_generation/step1_prompt.txt"
      },
      "opus": {
        "model_id": "claude-opus-4-20250514",
        "provider": "anthropic",
        "max_tokens": 16000,
        "temperature": 0.7,
        "description": "고품질 대본 생성 (프리미엄)",
        "system_prompt_file": "step1_script_generation/step1_prompt.txt"
      }
    }
  },

  "step2_image_prompt": {
    "primary_model": "gpt-4o-mini",
    "models": {
      "gpt_mini": {
        "model_id": "gpt-4o-mini",
        "provider": "openai",
        "max_tokens": 4000,
        "temperature": 0.7,
        "description": "이미지 프롬프트 생성용",
        "system_prompt": "You are an expert at converting Korean drama scene descriptions into detailed image generation prompts. Create vivid, specific prompts in English that capture the emotion, setting, and characters accurately. Focus on elderly Korean characters (60-85 years old) in realistic settings."
      }
    }
  },

  "step2_image_generation": {
    "primary_model": "gemini-2.0-flash-preview-image-generation",
    "models": {
      "gemini": {
        "model_id": "gemini-2.0-flash-preview-image-generation",
        "provider": "google",
        "description": "Gemini 2.0 이미지 생성",
        "default_params": {
          "aspect_ratio": "9:16",
          "style": "photorealistic"
        }
      }
    }
  },

  "step3_tts": {
    "primary_provider": "google",
    "providers": {
      "google": {
        "service": "Google Cloud Text-to-Speech",
        "language_code": "ko-KR",
        "voices": {
          "male_narrator": {
            "name": "ko-KR-Wavenet-C",
            "gender": "male",
            "description": "남성 내레이터 (60대 이상 주인공용)"
          },
          "female_narrator": {
            "name": "ko-KR-Wavenet-A",
            "gender": "female",
            "description": "여성 내레이터 (60대 이상 주인공용)"
          },
          "male_support": {
            "name": "ko-KR-Wavenet-D",
            "gender": "male",
            "description": "남성 조연"
          },
          "female_support": {
            "name": "ko-KR-Wavenet-B",
            "gender": "female",
            "description": "여성 조연"
          }
        },
        "audio_config": {
          "audio_encoding": "MP3",
          "speaking_rate": 0.9,
          "pitch": 0
        }
      }
    }
  },

  "step4_video_render": {
    "primary_engine": "creatomate",
    "engines": {
      "creatomate": {
        "api_endpoint": "https://api.creatomate.com/v1",
        "default_template": "drama_vertical",
        "output_format": "mp4",
        "resolution": {
          "width": 1080,
          "height": 1920
        },
        "fps": 30,
        "quality": "high"
      }
    }
  },

  "step5_youtube": {
    "api_version": "v3",
    "scopes": [
      "https://www.googleapis.com/auth/youtube.upload",
      "https://www.googleapis.com/auth/youtube"
    ],
    "default_category_id": "22",
    "default_privacy": "private",
    "rate_limits": {
      "uploads_per_day": 100,
      "quota_per_day": 10000
    }
  },

  "common_settings": {
    "retry_config": {
      "max_retries": 3,
      "base_delay_seconds": 2,
      "max_delay_seconds": 60,
      "exponential_backoff": true
    },
    "timeout_seconds": {
      "api_call": 120,
      "image_generation": 300,
      "video_render": 600,
      "upload": 1800
    }
  }
}
