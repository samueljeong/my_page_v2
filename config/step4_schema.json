    "type": "object",
    "required": ["step", "title", "video_filename", "duration_seconds"],
    "properties": {
      "step": {"type": "string", "const": "step4_video_result"},
      "title": {"type": "string"},
      "video_filename": {"type": "string"},
      "duration_seconds": {"type": "number"}
    }
  }
}
